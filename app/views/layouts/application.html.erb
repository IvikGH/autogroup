<!DOCTYPE html>
<html>
<head>
<title>Autogroup</title>
<%= stylesheet_link_tag 'sass/materialize', 
												media: 'all',
												'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
</head>
<body>
<div class="row">
	<%= render 'layouts/nav' %>
	<div>
		<% if user_signed_in? %>
			<span>Здравствуйте, <%= current_user.email %></span>
			<%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
		<% else %>
			<%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
		<% end %>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<% unless (@cart.nil?) %>
			<%= hidden_div_if( @cart.line_items.empty?, id: 'cart') do %>
	    	<%= render @cart %>
			<% end %>
		<% end %>
		<%= yield %>
	</div>
</div>
	<%= javascript_include_tag 'js/bin/materialize.js',
														 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'my_script.js',
														 'data-turbolinks-track' => true %>
</body>
</html>