<h1>Details#index</h1>
<p>Find me in app/views/details/index.html.erb</p>
<%= render "layouts/searchForm" %>
<table  class="hoverable striped responsive-table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Detail ID</th>
      <th>Title</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Weight</th>
      <th>Add to cart</th>
    </tr>
  </thead>
  <tbody>
  <% @details.each do |det| %>
    <tr>
	  	<td><%= det.brand.name %></td>
	  	<td><%= det.detail_id %></td>
	  	<td><%= det.detail_title %></td>
	  	<td><%= det.detail_price %></td>
	  	<td><%= det.discount_group %></td>
	  	<td><%= det.detail_weight %></td>
	  	<td><%= button_to 'Add to Cart',
	  										line_items_path(detail_id: det),
	  										remote: true %>
	  	</td>
    </tr>
  <% end %>
  </tbody>
</table>
